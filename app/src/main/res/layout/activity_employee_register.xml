<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EmployeeRegisterActivity">

    <EditText
        android:id="@+id/usernameError"
        android:layout_width="14dp"
        android:layout_height="42dp"
        android:background="#FFFFFF"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="X"
        android:textColor="#FF0000"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@+id/edittext_usernameEmployee"
        app:layout_constraintTop_toTopOf="@+id/edittext_usernameEmployee" />

    <EditText
        android:id="@+id/monthError"
        android:layout_width="14dp"
        android:layout_height="42dp"
        android:layout_marginStart="36dp"
        android:background="#FFFFFF"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="X"
        android:textColor="#FF0000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_monthEmployee"
        app:layout_constraintEnd_toStartOf="@+id/edittext_monthEmployee"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/edittext_monthEmployee"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/dayError"
        android:layout_width="14dp"
        android:layout_height="42dp"
        android:background="#FFFFFF"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="X"
        android:textColor="#FF0000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_dayEmployee"
        app:layout_constraintEnd_toStartOf="@+id/edittext_dayEmployee" />

    <EditText
        android:id="@+id/yearError"
        android:layout_width="14dp"
        android:layout_height="42dp"
        android:background="#FFFFFF"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="X"
        android:textColor="#FF0000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_yearEmployee"
        app:layout_constraintEnd_toStartOf="@+id/edittext_yearEmployee"
        app:layout_constraintTop_toTopOf="@+id/edittext_yearEmployee" />

    <EditText
        android:id="@+id/passwordError"
        android:layout_width="14dp"
        android:layout_height="42dp"
        android:background="#FFFFFF"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="X"
        android:textColor="#FF0000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_passwordEmployee"
        app:layout_constraintEnd_toStartOf="@+id/edittext_passwordEmployee"
        app:layout_constraintTop_toTopOf="@+id/edittext_passwordEmployee" />

    <EditText
        android:id="@+id/emailError"
        android:layout_width="14dp"
        android:layout_height="42dp"
        android:background="#FFFFFF"
        android:clickable="false"
        android:ems="10"
        android:focusable="false"
        android:inputType="textPersonName"
        android:text="X"
        android:textColor="#FF0000"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/edittext_emailEmployee"
        app:layout_constraintEnd_toStartOf="@+id/edittext_emailEmployee"
        app:layout_constraintTop_toBottomOf="@+id/textview_emailEmployee" />

    <TextView
        android:id="@+id/textview_employeeSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employee Sign up"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_quickCash4"
        app:layout_constraintVertical_bias="0.013" />

    <TextView
        android:id="@+id/textview_quickCash4"
        android:layout_width="347dp"
        android:layout_height="76dp"
        android:background="#215CF3"
        android:gravity="center"
        android:text="Quick Cash"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/textview_emailEmployee"
        android:layout_width="264dp"
        android:layout_height="27dp"
        android:layout_marginTop="36dp"
        android:text="What's your email?"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edittext_emailEmployee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.34"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_employeeSignUp"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edittext_emailEmployee"
        android:layout_width="310dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Enter your email"
        android:textColorHint="#9fa8da"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_employeeSignUp"
        app:layout_constraintVertical_bias="0.096" />

    <TextView
        android:id="@+id/textview_passwordEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a password"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edittext_passwordEmployee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_employeeSignUp"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edittext_passwordEmployee"
        android:layout_width="310dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Enter a password"
        android:textColorHint="#9fa8da"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_employeeSignUp"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/textview_usernameEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="196dp"
        android:text="Desired Username"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/edittext_usernameEmployee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.179"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_employeeSignUp"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edittext_usernameEmployee"
        android:layout_width="310dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="Enter a username"
        android:textColorHint="#9fa8da"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_employeeSignUp"
        app:layout_constraintVertical_bias="0.408" />

    <TextView
        android:id="@+id/textview_dobEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What's your date of birth"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_usernameEmployee"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/textview_monthEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Month"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@+id/edittext_monthEmployee"
        app:layout_constraintEnd_toStartOf="@+id/textview_dayEmployee"
        app:layout_constraintHorizontal_bias="0.458"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_dobEmployee"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textview_dayEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Day"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/edittext_dayEmployee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.385"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_dobEmployee"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textview_yearEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Year"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/edittext_yearEmployee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.361"
        app:layout_constraintStart_toEndOf="@+id/textview_dayEmployee"
        app:layout_constraintTop_toBottomOf="@+id/textview_dobEmployee"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edittext_monthEmployee"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="MM"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/edittext_dayEmployee"
        app:layout_constraintHorizontal_bias="0.632"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_dobEmployee"
        app:layout_constraintVertical_bias="0.16" />

    <EditText
        android:id="@+id/edittext_dayEmployee"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="DD"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_dobEmployee"
        app:layout_constraintVertical_bias="0.164" />

    <EditText
        android:id="@+id/edittext_yearEmployee"
        android:layout_width="70dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="YYYY"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.245"
        app:layout_constraintStart_toEndOf="@+id/edittext_dayEmployee"
        app:layout_constraintTop_toBottomOf="@+id/textview_dobEmployee"
        app:layout_constraintVertical_bias="0.16" />


    <TextView
        android:id="@+id/textview_genderEmployee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="What's your gender?"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.188"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edittext_monthEmployee" />

    <Button
        android:id="@+id/button_signUpEmployee"
        style="@style/Widget.App.Button"
        android:background="#000000"
        android:backgroundTint="#001973"
        android:textColor="#FFFFFF"
        android:layout_width="204dp"
        android:layout_height="68dp"
        android:layout_marginBottom="24dp"
        android:text="Sign Up"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


    <RadioGroup
        android:id="@+id/radioGroup_Employee"
        android:layout_width="305dp"
        android:layout_height="28dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/button_signUpEmployee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioButton_maleEmployee"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Male"
            android:textColor="#000000"
            android:textColorHighlight="@color/homeSwitchRoleButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.143"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.494" />

        <RadioButton
            android:id="@+id/radioButton_femaleEmployee"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textColor="#000000"
            android:textColorHighlight="@color/homeSwitchRoleButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.447"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.494" />

        <RadioButton
            android:id="@+id/radioButton_otherEmployee"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Other"
            android:textColor="#000000"
            android:textColorHighlight="@color/homeSwitchRoleButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.721"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintVertical_bias="0.494" />
    </RadioGroup>

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="left" />


</androidx.constraintlayout.widget.ConstraintLayout>