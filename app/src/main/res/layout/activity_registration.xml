<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hs3"
    tools:context=".RegistrationActivity">

    <TextView
        android:id="@+id/textview_quickCash2"
        android:layout_width="347dp"
        android:layout_height="76dp"
        android:background="#00D3A9"
        android:fontFamily="@font/questrial"
        android:gravity="center"
        android:text="Quick Cash"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.119" />

    <TextView
        android:id="@+id/textview_registerGreeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create a profile to get started"
        android:fontFamily="@font/questrial"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_quickCash2"
        app:layout_constraintVertical_bias="0.023" />

    <Button
        android:id="@+id/button_employer"
        android:layout_width="237dp"
        android:layout_height="67dp"
        android:backgroundTint="#00D3A9"
        android:fontFamily="@font/questrial"
        android:gravity="center"
        android:text="Employer"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="25sp"
        app:layout_constraintBottom_toTopOf="@+id/button_employee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_quickCash2"
        app:layout_constraintVertical_bias="0.927" />

    <Button
        android:id="@+id/button_employee"
        android:layout_width="237dp"
        android:layout_height="67dp"
        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/questrial"
        android:gravity="center"
        android:text="Employee"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_quickCash2"
        app:layout_constraintVertical_bias="0.349"
        app:strokeColor="#00FF99"
        app:strokeWidth="3sp" />

</androidx.constraintlayout.widget.ConstraintLayout>