<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    tools:context=".ViewSingleTask"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_height="76dp"
        android:layout_width="347dp"
        app:layout_constraintVertical_bias="0.047"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:text="Quick Cash"
        android:gravity="center"
        android:background="#215CF3"
        android:id="@+id/textview_quickCash8"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.189"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="TextView" android:id="@+id/viewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.235"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="TextView"
        android:id="@+id/viewPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTitle"
        android:layout_marginBottom="292dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.318"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="TextView"
        android:id="@+id/viewDesc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPrice"/>

    <Button
        android:layout_height="49dp"
        android:layout_width="97dp"
        app:layout_constraintVertical_bias="0.904"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#FFFFFF"
        android:text="Apply"
        android:background="#228C22"
        android:id="@+id/buttonApplyForTask"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_bias="0.904"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#FFFFFF"
        android:text="Return"
        android:background="#FF781F"
        android:id="@+id/buttonReturn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_bias="0.272"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>