<resources>
    <!-- Base application theme. -->
    <style name="" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme" parent="Theme.MaterialComponents.*">
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ThemeOverlay.AppCompat.Button</item>
    </style>
    <style name="ThemeOverlay.AppCompat.Button">
        <item name="colorPrimary">@color/homeSwitchRoleButton</item>
    </style>
</resources>